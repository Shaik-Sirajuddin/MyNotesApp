<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="142dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="9dp"
        app:cardElevation="40dp">
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <TextView
               android:textColor="@color/white"
               android:background="#042AFA"
               android:id="@+id/nTitle"
               android:textColorHint="#FABFBF"
               android:paddingStart="10dp"
               android:paddingEnd="10dp"
               android:layout_marginEnd="40dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:hint="This is title"
               android:maxLines="1"
               android:textSize="18sp"
               android:padding="2dp"
               android:textStyle="bold"
               />
           <TextView
               android:background="#0B2FF3"
               android:textColor="#C6EFC8"
               android:id="@+id/nDate"
               android:textSize="12sp"
               android:padding="1dp"
               android:textStyle="italic"
               android:hint="Date :"
               android:textColorHint="@color/black"
               android:paddingStart="10dp"
               android:paddingEnd="5dp"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toStartOf="@id/delete"
               app:layout_constraintTop_toBottomOf="@+id/nTitle"
               />
           <TextView
               android:textColor="@color/black"
               android:textColorHint="#5C5959"
               android:background="#FFFFFF"
               android:id="@+id/nData"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginEnd="40dp"
               android:maxLines="2"
               android:paddingEnd="10dp"
               android:paddingStart="10dp"
               android:minLines="2"
               android:ellipsize="end"
               android:textSize="15sp"
               android:hint="It has been a great day ..."
               android:padding="6dp"
               android:textStyle="normal"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/nDate"/>

           <ImageView
               android:background="#FFEB3B"
               android:id="@+id/delete"
               android:layout_width="0dp"
               android:layout_height="0dp"
               android:padding="4dp"
               android:src="@drawable/delete_icon"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toEndOf="@id/nTitle"
               app:layout_constraintEnd_toEndOf="parent"
               />
       </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>